<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContestActivity"
    android:orientation="vertical"
    android:layout_margin="20dp">
    <TextView
        android:id="@+id/testday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="YY년 N월 N일"
        android:textSize="40dp"
        android:layout_marginBottom="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvCqnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="문제 수 : n개"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvCqtime"
                android:textSize="15dp"
                android:text="제한 시간: n시간"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left">
            <ImageView
                android:id="@+id/ivPerson"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_people_alt_24"
                android:layout_gravity="right"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="문제"
        android:layout_marginVertical="10dp"
        android:textSize="25dp"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/lvQsimple"/>

    <Button
        android:id="@+id/btnCstart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="시작하기"/>
</LinearLayout>